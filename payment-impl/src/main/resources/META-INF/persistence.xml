<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="payment-unit">
        <!--Сюда вставлять путь до сущностей, например rd.epam.java.payment.domain.entity.Accept-->
        <class>rd.epam.java.payment.domain.entity.Account</class>
        <class>rd.epam.java.payment.domain.entity.AccountStatus</class>
        <class>rd.epam.java.payment.domain.entity.Accept</class>
        <class>rd.epam.java.payment.domain.entity.AcceptStatus</class>
        <class>rd.epam.java.payment.domain.entity.Client</class>
        <class>rd.epam.java.payment.domain.entity.Payment</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>
</persistence>
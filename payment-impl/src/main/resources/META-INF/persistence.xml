<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="test.persistanceUnit">
        <!--Сюда вставлять путь до сущностей, например rd.epam.java.payment.domain.entity.Accept-->
        <class>Accept</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/courses?currentSchema=payment"/>
            <property name="javax.persistence.jdbc.user" value="pay"/>
            <property name="javax.persistence.jdbc.password" value="pay"/>
        </properties>
    </persistence-unit>
</persistence>
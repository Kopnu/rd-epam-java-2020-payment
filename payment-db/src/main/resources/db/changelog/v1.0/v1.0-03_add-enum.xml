<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!--drop pm_account_statuses-->
    <changeSet id="23.05.20-drop-foreign-key-constraint-with-fk_account_status-in-pm_accounts-table"
               author="Mihail_Sevryugin">
        <dropForeignKeyConstraint baseTableName="${prefix}_accounts"
                                  constraintName="fk_account_status"/>
    </changeSet>

    <changeSet id="23.05.20-drop-primary-key-in-pm_account_status-table" author="Mihail_Sevryugin">
        <dropPrimaryKey constraintName="${prefix}_account_statuses_pkey"
                        tableName="${prefix}_account_statuses"/>
    </changeSet>

    <changeSet id="23.05.20-drop-table-pm_account_statuses" author="Mihail_Sevryugin">
        <dropTable cascadeConstraints="true"
                   tableName="${prefix}_account_statuses"/>
    </changeSet>

    <!--drop pm_accept_statuses-->
    <changeSet id="23.05.20-drop-foreign-key-constraint-with-fk_accept_status-in-pm_accepts-table"
               author="Mihail_Sevryugin">
        <dropForeignKeyConstraint baseTableName="${prefix}_accepts"
                                  constraintName="fk_accept_statuses"/>
    </changeSet>

    <changeSet id="23.05.20-drop-primary-key-in-pm_accept_status-table" author="Mihail_Sevryugin">
        <dropPrimaryKey constraintName="${prefix}_accept_statuses_pkey"
                        tableName="${prefix}_accept_statuses"/>
    </changeSet>

    <changeSet id="23.05.20-drop-table-pm_accept_statuses" author="Mihail_Sevryugin">
        <dropTable cascadeConstraints="true"
                   tableName="${prefix}_accept_statuses"/>
    </changeSet>
</databaseChangeLog>